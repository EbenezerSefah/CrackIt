<div class="wrapper" >

    <div class="top-font"> Crackit </div>

    <div class="coming-soon"> COMING SOON </div>

    <div class="mission-statement">
            (Building a community for people to learn and prepare for technical interviews)
    </div>
    <h2>Sign in</h2>

<%= form_for(User.new, :url => user_session_path) do |f| %>
  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.check_box :remember_me %> <%= f.label :remember_me %></div>

  <div><%= f.submit "Sign in" %></div>
  <%= link_to "Forgot your password?", new_password_path("user") %><br />
<% end %>

<h2>Sign up</h2>

<%= form_for(User.new, :url => user_registration_path) do |f| %>

  <div><%= f.label :email %><br />
  <%= f.email_field :email, :autofocus => true %></div>

  <div><%= f.label :password %><br />
  <%= f.password_field :password %></div>

  <div><%= f.label :password_confirmation %><br />
  <%= f.password_field :password_confirmation %></div>

  <div><%= f.submit "Sign up" %></div>
<% end %>


